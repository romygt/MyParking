<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/linearlayout1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">

    </LinearLayout>
<LinearLayout
    android:id="@+id/linearlayout0"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_height="200dp">

    <LinearLayout
        android:id="@+id/linearlayout01"
        android:layout_width="100dp"

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_height="match_parent"> </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/camera"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:scaleType="centerCrop"
                android:src="@drawable/ic_camera" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/username"
    android:text="Khaoula Manel"
    android:textSize="26sp"
    android:textStyle="bold">

</TextView>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/greypurple_circular_border"
            android:orientation="horizontal"
            android:padding="2sp">


            <ImageView
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                android:baselineAligned="false"
                android:padding="8dp"
                android:src="@drawable/ic_user_icon" />

            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="Mon Compte"

                android:textSize="17sp"
                android:textStyle="bold" />


            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="15dp"

                android:src="@drawable/ic_arrow_right"
                />


        </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="65dp"
       android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/greypurple_circular_border"
        android:orientation="horizontal"
        android:padding="2sp">


        <ImageView
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            android:baselineAligned="false"
            android:padding="8dp"
            android:src="@drawable/ic_bell" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:text="Notifications"
            android:textSize="17sp"
            android:textStyle="bold" />


        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="15dp"

            android:src="@drawable/ic_arrow_right"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/greypurple_circular_border"
        android:orientation="horizontal"
        android:padding="2sp">


        <ImageView
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            android:baselineAligned="false"
            android:padding="8dp"
            android:src="@drawable/ic_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:text="Paramètres"
            android:textSize="17sp"
            android:textStyle="bold" />


        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="15dp"

            android:src="@drawable/ic_arrow_right"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/greypurple_circular_border"
        android:orientation="horizontal"
        android:padding="2sp">


        <ImageView
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            android:baselineAligned="false"
            android:padding="8dp"
            android:src="@drawable/ic_question_mark" />

        <TextView

            android:id="@+id/TextViewJour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:text="Aide"

            android:textSize="17sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/TextViewHeure"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="15dp"

            android:src="@drawable/ic_arrow_right"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/greypurple_circular_border"
        android:orientation="horizontal"
        android:padding="2sp">


        <ImageView
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            android:baselineAligned="false"
            android:padding="8dp"
            android:src="@drawable/ic_log_out" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:text="Déconnexion"

            android:textSize="17sp"
            android:textStyle="bold" />


        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"

            android:src="@drawable/ic_arrow_right"
            />


    </LinearLayout>



</LinearLayout>
</ScrollView>